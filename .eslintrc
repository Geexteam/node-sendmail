{
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "amd": true,
        "es6": true
    },
    "extends": "defaults/configurations/walmart/es6-node",
    "root": true,
    "rules": {
        "indent": [
            2,
            4,
            {
                "VariableDeclarator": 2
            }
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "camelcase": 0,
        "func-style": [
            2,
            "declaration"
        ],
        "filenames/filenames": [
            2,
            "^[a-z0-9_]+$"
        ],
        "global-require": 0,
        "max-statements": [
            2,
            20
        ],
        "max-len": [
            2,
            120,
            4
        ],
        "no-use-before-define": 0,
        "no-console": 0,
        "no-process-exit": 0,
        "new-cap": 0,
        "no-invalid-this": 0,
        "curly": 0
    }
}
